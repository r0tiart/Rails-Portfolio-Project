<h1 class="text-center"><%= @user.username %></h1>

<% if current_user != @user %>
  <h4><%= link_to "Add Friend", user_friends_path(@user), method: "post"  if pending_friends.exclude?(@user) %></h4>

<% end %>

<div class="row">
  <div class="col-md-6"><h3>Currently Reading </h3>
  <%= button_to "Add Book", new_book_path if current_user == @user %><br>

     <% if reading? %>
        <%= render partial: "show", collection: currently_reading, as: :book, locals: {user: @user} %>
     <% end %>
     
  </div>
  <div class="col-md-6"><h3>Finished Books</h3>
   
    <%= render partial: "show", collection: finished_books, as: :book, locals: {user: @user} %>


   <!--  <ul>
      <% finished_books.each do |book| %>
        <li><%= book.title %></li>
      <% end %>
    </ul> -->
  </div>
</div>

