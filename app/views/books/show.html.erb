<h1><%= @book.title.titleize %></h1>
<h4>By: <%= @book.author.name.titleize %></h4>
<h4>Genre: <%= @book.genre.title.titleize %></h4>



<%= link_to("Add Book", addbook_path(@book), method: :post) if logged_in? && user_books.exclude?(@book) %>

<%= link_to("Bookmarks", edit_user_book_path(@book)) if logged_in? && user_books.include?(@book) %>